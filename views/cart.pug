extends layout.pug

block append scripts 
    script(src="/cart.js")

block append content
    h1.text-center= 'Shopping Cart'
    form(id='cart')
        .row.justify-content-center.align-items-center
            each item in items
                .row.justify-content-start.align-items-center
                    .col-2
                        img(srcset=item['0'].imgUrl width='100px')
                    .col-6
                        h3= item['0'].name
                        p= item['0'].description
                    .col-2
                        p= item['0'].price + 'â‚¬'
                    .col-2
                        input.form-control(type='number' value=`${item.quantity}` id=`${item['0']._id}` name=`item-quantity` step='1')
        .row.justify-content-center
            button.btn.btn-primary(type='submit') Update Cart
        .row.justify-content-center
            h2(id='cartMessage')
        
            